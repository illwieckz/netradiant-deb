Description: do not strip binary in make step and add debug symbols
 Binary stripping can be done later (so the debug symbols go into the
 dbgsym packages).

--- a/Makefile.mbspc
+++ b/Makefile.mbspc
@@ -167,7 +167,7 @@ ifeq ($(findstring -O,$(CFLAGS)),)
 	# only add -O3 if no -O flag is in $(CFLAGS)
 endif
 	CPPFLAGS_COMMON += -DNDEBUG
-	LDFLAGS_COMMON += -s
+	LDFLAGS_COMMON +=
 else
 
 ifeq ($(BUILD),native)
@@ -177,7 +177,7 @@ ifeq ($(findstring -O,$(CFLAGS)),)
 endif
 	CFLAGS_COMMON += -march=native -mtune=native
 	CPPFLAGS_COMMON += -DNDEBUG
-	LDFLAGS_COMMON += -s
+	LDFLAGS_COMMON +=
 else
 
 $(error Unsupported build type: $(BUILD))
